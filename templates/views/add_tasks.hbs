<html>

<head>
    <link rel="stylesheet" href="/css/add_tasks.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css">
    <script src="/js/jquery-3.7.1.js"></script>
    <script src="/js/add_tasks.js"></script>
</head>

<body>
    <h2>ADD TASKS</h2>
    <div class="container">
        <div class="row btn">
            <button id="backBtn">Back</button>
        </div>

        <form id="userForm">
            <div class="row">
                <div class="col-2">
                    <label>Tasks</label>
                </div>
                <div class="col-sm">
                    <input type="text" required>
                </div>
            </div>

            <div class="row">
                <div class="col-2">
                    <label>Users</label>
                </div>
                <div class="col-sm">
                    <select>
                        <option value="ram">Ram</option>
                        <option value="sham">Sham</option>
                        <option value="priya">Priya</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-2">
                    <label>Status</label>
                </div>
                <div class="col-sm">
                    <select>
                        <option value="comp">Completed</option>
                        <option value="incomp">Incompleted</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-2">
                    <input type="submit" value="Save">
                </div>
                <div class="col-sm">
                    <input type="reset" value="Reset">
                </div>
            </div>
        </form>
    </div>
</body>

</html>